    .hero-background {
      z-index: -1;
      position: absolute;
      top: 0;
      bottom: 0;
      right: 0;
      left: 0;
      width: auto;
      object-fit: cover;
      object-position: center center;
    }

    .hero-background--desktop {

      display: block;
      height: 100%;
      min-width: 100%;
    }

    .hero-background--mobile {
      display: none;
      min-height: 100%;
      width: 100%;
      
    }




    
  {% endstyle %}

  <div id="hero-wrapper" class="hero-wrapper">

    <div class="mobile-logo">
        <img src="https://cdn.shopify.com/s/files/1/2315/8873/files/logo.svg?v=1693442416" alt="{{ shop.name }}" />
    </div>

    <div class="left">

        <div class="hero-logo">
            <img id="default-hero-logo" src="https://cdn.shopify.com/s/files/1/2315/8873/files/logo.svg?v=1693442416" alt="{{ shop.name }}" />
        </div>

        {% form 'storefront_password' %}
            {{ form.errors | default_errors }}
            <label for="password">{{ 'enter password' | downcase | escape }}</label>
            <input type="password" name="password" id="password" autofocus="" />
            <input class="btn" name="commit" type="submit" value="{{ 'submit' | downcase | escape }}" />
        {% endform %}

    </div>

    <div class="right movable-elements-wrapper">

        {% if settings.password_page_assets == true %}
            <div
                id="top-left"
                data-value="4"
                class="top-left floating-media element movable">
                <img src="https://siberia-hills.myshopify.com/cdn/shop/files/topleft_video.gif?v=1693422866&width=180" alt="" />
            </div>

            <div
                id="top-right"
                data-value="1"
                class="top-right floating-media element movable">
                <img src="https://siberia-hills.myshopify.com/cdn/shop/files/siberia_2--smaller.gif?v=1693442474&width=190" alt="" />
            </div>

            <div
                id="bottom-left"
                data-value="3"
                class="bottom-left floating-media element movable">
                <img src="https://siberia-hills.myshopify.com/cdn/shop/files/BOTTOMLEFT_IMAGE.png?v=1683917217&width=180" alt="" />
            </div>

            <div
                id="bottom-right"
                data-value="2"
                class="bottom-right floating-media element movable">
                <img src="https://siberia-hills.myshopify.com/cdn/shop/files/BOTTOMRIGHT_IMAGE.png?v=1683917234&width=100" alt="" />
            </div>

            <div id="cloud" class="cloud-holder">
                <img style="width: 80%" src="https://siberia-hills.myshopify.com/cdn/shop/files/ezgif.com-optimize.gif?v=1693442523" alt="" />
