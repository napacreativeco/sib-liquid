<li class="item">
    <div class="item-wrapper">

      {% for image in product.media limit: 1 %}
        <div class="image" style="background: url('{{ image | image_url: width: 800 }}'); background-size: cover; background-position: center center;" onclick="window.location='{{ collection.url }}{{ product.url }}';">
        </div>
      {% endfor %}
 
      {% comment %} DATA {% endcomment %}
      <div class="product-data">
        
        <div class="data">
          <div class="name">
            <a href="{{ collection.url }}{{ product.url }}" title="{{ product.title }}">
              <h3>{{ product.title }}</h3>
            </a>
          </div>
  
          <div class="short-description">
            <a href="{{ collection.url }}{{ product.url }}" title="{{ product.title }}">
              <span>{{ product.metafields.product.short_description.value }}</span>
            </a>
          </div>
        </div>

        {% render 'indicators', data: product %}

      </div>

    </div>
  </li>