<div class="grid-changer">
    <div class="grid-changer-wrapper">
    
        <div class="crosshair">
            <span class="crosshair-icon">
                <img src="{{ 'crosshair.svg' | asset_url }}" alt="Change View" />
            </span>
        </div>

        <div class="pagination">
            <a href="{{ }}" title="Page 01">01</a> 
            &nbsp;&ndash;&nbsp; 
            {% if template.name == 'index' %}
                <a href="/collections/all" title="Shop All">all</a>
            {% elsif collection %}
                {% if collection.title == 'Products' %}
                    {{ 'All | escape }}
                {% else %}
                    {{ collection.title }}
                {% endif %}
            {% endif %}
        </div>

    </div>
</div>