<div class="footer-menu">

  <div class="footer-menu-wrapper">

    <div class="filter-menu">
      <div class="filter-menu-wrapper">
        <div class="top">
          <ul>
            {% for link in linklists.main-menu.links %}
              <li class="{% if link.active or parent_link_active %} active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="filters">
          <ul>
            {% for link in linklists.shop-menu.links %}
              <li class="{% if link.active or parent_link_active %} active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="bottom">
          <div class="terms-link">
            <a href="/pages/terms" title="Terms">Terms</a>
          </div>
          <div class="policy-link">
            <a href="/pages/policy" title="Policy / Questions">Policy / Questions</a>
          </div>
        </div>
      </div>
    </div>
    <div class="plus">
      <span class="filter-menu-text">menu</span>
      <div class="icon">
        <img src="{{ 'cross.svg' | asset_url }}" alt="Filters" />
      </div>
    </div>
  </div>


</div>