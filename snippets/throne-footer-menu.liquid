<div class="footer-menu">

  <div class="footer-menu-wrapper">

    <div class="filter-menu">
      <div class="filter-menu-wrapper">

        <div class="top">
          <ul>
            {% for link in linklists.main-menu.links %}
              <li class="{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a class="top-link {% if link.active or link.child_active %} active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="filters">
          <ul>
            {% for link in linklists.shop-menu.links %}
              <li class="{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a class="filter-link {% if link.active or parent_link_active %} active{% endif %}" href="{{ link.url }}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="bottom">
          <ul>
            {% for link in linklists.shop-footer.links %}
              <li class="{% if link.active or parent_link_active %} active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

      </div>
    </div>
    <div class="plus">
      <div class="icon">
        <span class="text menu-text">menu</span>
        <img src="{{ 'cross.svg' | asset_url }}" alt="Filters" />
      </div>
    </div>
  </div>


</div>