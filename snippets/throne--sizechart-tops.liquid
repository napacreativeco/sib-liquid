<table class="size-chart-table size-chart-tops">
    <thead>
      <th class="label">{{ 'Label:' | escape }}</th>
      <th>{{ 'S' | escape }}</th>
      <th>{{ 'M' | escape }}</th>
      <th>{{ 'L' | escape }}</th>
      <th>{{ 'XL' | escape }}</th>
      <th>{{ 'XXL' | escape }}</th>
    </thead>
    <tbody>
      {% if product.metafields.sizechart.size_chart_tops.value.chest_s != blank %}
        <tr id="chest">
          <td class="label">{{ 'chest:' | escape }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.chest_s }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.chest_m }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.chest_l }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.chest_xl }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.chest_xxl }}</td>
        </tr>
      {% endif %}
      {% if product.metafields.sizechart.size_chart_tops.value.length_s != blank %}
        <tr id="length">
          <td class="label">{{ 'Length:' | escape }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.length_s }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.length_m }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.length_l }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.length_xl }}</td>
          <td>{{ product.metafields.sizechart.size_chart_tops.value.length_xxl }}</td>
        </tr>
      {% endif %}
    </tbody>
  </table>