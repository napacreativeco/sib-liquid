
<li>
    <div class="list-item-wrapper">


      {% for image in product.media limit: 1 %}
        <div class="image" style="background: url('{{ image | image_url: width: 200 }}'); background-size: cover; background-position: center center;" onclick="window.location='{{ product.url }}';">
        </div>
      {% endfor %}
 

      <div class="product-title mobile">
        <a href="{{ product.url }}" title="{{ product.title }}">
          <h3>{{ product.title }}</h3>
        </a>
        <a href="{{ product.url }}" title="{{ product.title }}">
          <span>{{ product.metafields.product.short_description.value }}</span>
        </a>
      </div>

      <div class="product-title desktop">
        <a href="{{ product.url }}" title="{{ product.title }}">
          <h3>{{ product.title }}</h3>
        </a>
      </div>

      <div class="short-description desktop">
        <a href="{{ product.url }}" title="{{ product.title }}">
          <span>{{ product.metafields.product.short_description.value }}</span>
        </a>
      </div>

      <div class="price">
        <a href="{{ product.url }}" title="Price">
          {% if product.selected_or_first_available_variant != blank %}
            <span class="variant-price">
              {{ product.selected_or_first_available_variant.price | money_without_trailing_zeros | remove: '$' }}
            </span>
          {% else %}
            <span class="regular-price">
              {{ product.price | money_without_trailing_zeros | remove: '$' }} <span>{{ shop.currency }}</span>
            </span>
          {% endif %}
        </a>
      </div>

      <div class="indicator-holder">
        {% render 'indicators', data: product %}
      </div>

    </div>
  </li>