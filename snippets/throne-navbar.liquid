<div class="throne--navbar">
  <div class="navbar-wrapper">
    <div class="logo">
      <a href="{{ '/' | escape }}" title="Home">
        {% if settings.navbar_logo == empty %}
          <img class="default-logo" src="{{ 'logo.svg' | asset_url }}" alt="Siberia">          
        {% else %}
          <img class="classic-logo" src="{{ settings.navbar_logo | image_url: width: 500 }}" alt="Siberia">
        {% endif %}
      </a>
    </div>

    {% if template.name == 'index' %}
      {% style %}
        .hamburger {
          position: absolute;
          top: 30px;
          right: 10px;
        }
      {% endstyle %}
      <div class="hamburger" data-ajax-cart-toggle-class-button="js-my-cart-open | add">
        {% if settings.cart_icon == empty %}
          <img src="{{ 'cart.png' | asset_url }}" alt="{{ 'Menu' | escape }}">
        {% else %}
          <img src="{{ settings.cart_icon | image_url: width: 100 }}" alt="{{ 'Menu' | escape }}">
        {% endif %}
          <span id="cart-counter" class="cart-counter">
            {{ '(' | escape }}<span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span>{{ ')' | escape }}
          </span>
      </div>
    {% else %}
      {% style %}
        .hamburger {
          position: relative;
          top: 0;
          right: 0;
        }
      {% endstyle %}
      <div class="hamburger" data-ajax-cart-toggle-class-button="js-my-cart-open | add">
        {% if settings.cart_icon == empty %}
          <img src="{{ 'cart.png' | asset_url }}" alt="{{ 'Menu' | escape }}">
        {% else %}
          <img src="{{ settings.cart_icon | image_url: width: 100 }}" alt="{{ 'Menu' | escape }}">
        {% endif %}
          <span id="cart-counter" class="cart-counter">
            {{ '(' | escape }}<span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span>{{ ')' | escape }}
          </span>
      </div>
    {% endif %}
  </div>
</div>