<section class="homepage-hero">
  <div class="hero-wrapper">
    <div class="left">

        {{ section.settings.hero_background_desktop }}
        <div class="hero-logo">
          <img src="{{ 'logo.svg' | asset_url }}" alt="Siberia" />
        </div>
    
        <ul>
          <li>
            <span class="scroll-to-link" data-component="shop-component">
              {{ 'Shop' | escape }}
            </span>
          </li>
          <li>
            <span class="scroll-to-link" data-component="about-component">
              {{ 'About' | escape }}
            </span>
          </li>
          <li>
            <span class="scroll-to-link" data-component="contact-component">
              {{ 'Contact' | escape }}
            </span>
          </li>
          <li>
            <span class="scroll-to-link" data-component="lookbook-component">
              {{ 'Lookbook' | escape }}
            </span>
          </li>
          <li></li>
        </ul>

    </div>
    <div class="right">section images</div>
  </div>
</section>
<script>

  function hidePlus() {
    document.querySelector('.plus').style.display = 'none';
  }

  hidePlus();

</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_background_desktop",
      "label": "Background (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "hero_background_mobile",
      "label": "Background (Mobile)"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
